@model PIS.Models.ProjectDetailsViewModel

@{
    ViewData["Title"] = "Proje Detayları";
}

<h1>Proje Detayları</h1>

<div>
    <h4>Proje Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Proje Adı
        </dt>
        <dd class="col-sm-10">
            @Model.Project.Title
        </dd>
        <dt class="col-sm-2">
            Bütçe
        </dt>
        <dd class="col-sm-10">
            @Model.Project.Budget.ToString("C")
        </dd>
    </dl>
</div>

<hr />

<div>
    <h4>Projeye Atanan Kişiler</h4>
    @if (Model.Assignments.Any())
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Kişi</th>
                    <th>Rol</th>
                    <th>Başlangıç Tarihi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model.Assignments)
                {
                    <tr>
                        <td>@assignment.Person.FirstName @assignment.Person.LastName</td>
                        <td>@assignment.Role.Name</td>
                        <td>@assignment.StartDate?.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Bu projeye henüz kimse atanmamış.</p>
    }
</div>


<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    <a asp-action="Update" asp-route-id="@Model.Project.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Delete" asp-route-id="@Model.Project.Id" class="btn btn-danger">Sil</a>
</div>


