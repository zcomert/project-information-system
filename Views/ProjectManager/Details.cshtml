@model Project

<div class="container mt-5">
        <h1 class="text-center">Project Details</h1>
        <div class="card mt-4">
            <div class="card-header">
                <h2>@Model.Title</h2>
            </div>
            <div class="card-body">
                <p><strong>Project ID:</strong> @Model.Id</p>
                <p><strong>Budget:</strong> $@Model.Budget</p>
            </div>
            <div class="card-footer text-end">
                <a href="/ProjectManager/Edit/@Model.Id" class="btn btn-primary">Edit</a>
                <a href="/ProjectManager/Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>