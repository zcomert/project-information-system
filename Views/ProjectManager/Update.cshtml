@model PIS.Models.ProjectUpdateViewModel

<h1>Proje Güncelle</h1>

<form asp-action="Update" asp-route-id="@Model.Project.Id" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Project.Id" />

    <div class="mb-3">
        <label asp-for="Project.Title" class="form-label">Proje Başlığı</label>
        <input asp-for="Project.Title" class="form-control" />
        <span asp-validation-for="Project.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Project.Budget" class="form-label">Bütçe</label>
        <input asp-for="Project.Budget" class="form-control" />
        <span asp-validation-for="Project.Budget" class="text-danger"></span>
    </div>

    <hr />
    <h4>Kişi Atamaları</h4>
    
    <div class="mb-3">
        <label asp-for="SelectedPersonIds" class="form-label">Atanacak Kişiler</label>
        <select asp-for="SelectedPersonIds" asp-items="Model.AllPersons" class="form-control" multiple="multiple" size="8"></select>
        <small class="form-text text-muted">Birden çok kişi seçmek için Ctrl tuşunu basılı tutun.</small>
    </div>

    <div class="mb-3">
        <label asp-for="SelectedRoleId" class="form-label">Yeni Eklenecek Kişilerin Rolü</label>
        <select asp-for="SelectedRoleId" asp-items="Model.AllRoles" class="form-control">
            <option value="">Lütfen bir rol seçin...</option>
        </select>
        <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-controller="ProjectManager" asp-action="Details" asp-route-id="@Model.Project.Id" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

