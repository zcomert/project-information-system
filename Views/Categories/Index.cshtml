@model IEnumerable<PIS.Models.Category>

<h1>Kategoriler</h1>

<a asp-controller="Categories" asp-action="Create" class="btn btn-primary mb-3">Yeni Kategori</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-controller="Categories" asp-action="Update" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Henüz kategori oluşturulmamıştır. <a asp-controller="Categories" asp-action="Create">Yeni bir kategori oluşturun.</a>
    </div>
}
