@model PIS.Models.Project
<h1>Proje Detaylari</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Özellik</th>
            <th>Deger</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Proje Adi</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>Bütçe</td>
            <td>@Model.Budget.ToString("C")</td>
        </tr>
        <tr>
            <td>Kategori</td>
            <td>@(Model.Category?.CategoryName ?? "Belirtilmemiş")</td>
        </tr>
    </tbody>
</table>

<a href="/ProjectManager" class="btn btn-secondary">Geri Dön</a>
<a asp-controller="ProjectManager" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">Sil</a>