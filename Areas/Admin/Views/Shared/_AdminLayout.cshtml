<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-layout.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="border-end bg-light" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">
                <i class="bi bi-shield-lock"></i> Admin Paneli
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action p-3" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a class="list-group-item list-group-item-action p-3" asp-area="Admin" asp-controller="Projects" asp-action="Index">
                    <i class="bi bi-kanban me-2"></i> Projeler
                </a>
                <a class="list-group-item list-group-item-action p-3" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                    <i class="bi bi-tags me-2"></i> Kategoriler
                </a>
                <a class="list-group-item list-group-item-action p-3" asp-area="Admin" asp-controller="Users" asp-action="Index">
                    <i class="bi bi-people me-2"></i> Kullanıcılar
                </a>
                <a class="list-group-item list-group-item-action p-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-box-arrow-left me-2"></i> Siteye Dön
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle" type="button">
                        <i class="bi bi-list"></i>
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> @(User.Identity?.Name ?? "Yönetici")
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Profil</a>
                                    <div class="dropdown-divider"></div>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link p-0">Çıkış Yap</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="container-fluid p-4">
                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["success"]
                    </div>
                }
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["error"]
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
