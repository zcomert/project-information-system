@model IEnumerable<PIS.Areas.Admin.Models.UserListItem>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Kullanıcılar</h1>
    <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary">Yeni Kullanıcı</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Roller</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Roles</td>
                <td>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz kullanıcı yok.</div>
}
